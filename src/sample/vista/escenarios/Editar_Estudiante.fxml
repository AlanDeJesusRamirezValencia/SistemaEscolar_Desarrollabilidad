<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controlador.EditarEstudiante">
    <center>
        <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="24.0" layoutY="24.0" text="Editar Estudiante">
                    <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                    </font>
                </Label>
                <Label layoutX="24.0" layoutY="68.0" text="Nombre(s)">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="nombre" layoutX="24.0" layoutY="92.0" prefWidth="300.0" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;">
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                </TextField>
                <Line endX="300.0" layoutX="24.0" layoutY="126.0" strokeWidth="3.0" />
                <Label layoutX="24.0" layoutY="136.0" text="Apellido Paterno">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="apellidoPaterno" layoutX="24.0" layoutY="160.0" prefWidth="300.0" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;">
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                </TextField>
                <Line endX="300.0" layoutX="24.0" layoutY="193.0" strokeWidth="3.0" />
                <Label layoutX="24.0" layoutY="204.0" text="Apellido Materno">
                    <font>
                        <Font name="Segoe UI Semibold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="apellidoMaterno" layoutX="24.0" layoutY="228.0" prefWidth="300.0" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;">
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                </TextField>
                <Line endX="300.0" layoutX="22.0" layoutY="261.0" strokeWidth="3.0" />
                <Button fx:id="usuario" layoutX="670.0" layoutY="17.0" mnemonicParsing="false" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;" text="Usuario">
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@../iconos/usuario.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button layoutX="687.0" layoutY="554.0" mnemonicParsing="false" onAction="#actualizarDatos" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;" text="Actualizar">
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                </Button>
            <Label fx:id="grupo" layoutX="24.0" layoutY="273.0" text="Grupo: ">
               <font>
                  <Font name="Segoe UI Semibold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="matricula" layoutX="24.0" layoutY="310.0" text="Matricula: ">
               <font>
                  <Font name="Segoe UI Semibold" size="18.0" />
