<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controlador.Login" prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #ff8282;" BorderPane.alignment="CENTER">
   <TextField fx:id="usuario" layoutX="204.0" layoutY="243.0" onAction="#iniciarSesion" prefWidth="391.0"
              promptText="Usuario" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;">
      <font>
         <Font name="Segoe UI" size="18.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="TEXT"/>
      </cursor>
   </TextField>
   <Label fx:id="datosIncorrectos" layoutX="204.0" layoutY="210.0" prefWidth="391.0" textFill="RED">
      <font>
         <Font name="Segoe UI" size="18.0"/>
      </font>
   </Label>
   <PasswordField fx:id="contrasena" layoutX="204.0" layoutY="289.0" onAction="#iniciarSesion" prefWidth="391.0"
                  promptText="Contraseña" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;">
      <font>
         <Font name="Segoe UI" size="18.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="TEXT"/>
      </cursor>
   </PasswordField>
   <Line endX="595.0" endY="278.0" startX="204.0" startY="278.0" strokeWidth="3.0"/>
   <Line endX="595.0" endY="324.0" startX="204.0" startY="324.0" strokeWidth="3.0"/>
   <Button layoutX="331.0" layoutY="334.0" mnemonicParsing="false" onAction="#iniciarSesion" prefHeight="24.0"
           prefWidth="150.0" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;" text="Iniciar Sesión">
      <font>
         <Font name="Segoe UI Semibold" size="18.0"/>
      </font>
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
</AnchorPane>
