<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="contenedorPrincipal" prefHeight="600.0" prefWidth="800.0" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controlador.InformaciónEstudiante">
    <children>
        <Button layoutX="24.0" layoutY="17.0" mnemonicParsing="false" onAction="#regresar" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;">
            <font>
                <Font name="Segoe UI" size="18.0" />
            </font>
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../iconos/flecha_atras.png" />
                    </image>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Label fx:id="titulo" layoutX="72.0" layoutY="17.0" prefHeight="32.0" text="Información del Estudiante">
            <font>
                <Font name="Segoe UI Semibold" size="24.0" />
            </font>
        </Label>
        <Button layoutX="410.0" layoutY="19.0" mnemonicParsing="false" onAction="#editar" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../iconos/editar.png" />
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Label layoutX="24.0" layoutY="58.0" text="Nombre">
            <font>
                <Font name="Segoe UI Semibold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="nombreEstudiante" layoutX="24.0" layoutY="92.0">
            <font>
                <Font name="Segoe UI" size="18.0" />
            </font>
        </Label>
        <Label layoutX="24.0" layoutY="126.0" text="Matrícula">
            <font>
                <Font name="Segoe UI Semibold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="matricula" layoutX="24.0" layoutY="160.0">
            <font>
                <Font name="Segoe UI" size="18.0" />
            </font>
        </Label>
        <Label layoutX="24.0" layoutY="194.0" text="Grupo">
            <font>
                <Font name="Segoe UI Semibold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="nombreGrupo" layoutX="24.0" layoutY="228.0">
            <font>
                <Font name="Segoe UI" size="18.0" />
            </font>
        </Label>
        <Button layoutX="14.0" layoutY="544.0" mnemonicParsing="false" onAction="#exportarCalificaciones" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;" text="Exportar Calificaciones">
            <font>
                <Font name="Segoe UI Semibold" size="18.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnUsuario" layoutX="670.0" layoutY="24.0" mnemonicParsing="false" onAction="#mostrarBtnCerrarSesion" style="-fx-border-width: 0; -fx-background-color: #FFFFFF;" text="Usuario">
            <font>
                <Font name="Segoe UI" size="18.0" />
            </font>
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../iconos/usuario.png" />
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="btnCerrarSesion" layoutX="645.0" layoutY="53.0" mnemonicParsing="false" onAction="#cerrarSesion" style="-fx-background-color: #FFFFFF; -fx-border-width: 0;" text="Cerrar Sesión" visible="false">
            <font>
                <Font name="Segoe UI Semibold" size="18.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</AnchorPane>
